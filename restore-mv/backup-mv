#!/bin/sh

tar_files()
{
    tarfile=$1

    slapcat -l /usr/share/metavize/conf/dirbackup.ldif

    tar zcf $tarfile --ignore-failed-read -C / \
        etc/hostname \
        etc/network/interfaces \
        etc/openvpn \
        etc/resolv.conf \
        usr/share/metavize/conf/argon.properties \
        usr/share/metavize/conf/keystore \
        usr/share/metavize/conf/mvvm.networking.properties \
        usr/share/metavize/conf/networking.sh \
        usr/share/metavize/conf/openvpn/misc \
        usr/share/metavize/conf/openvpn/pki \
        usr/share/metavize/conf/timezone \
        usr/share/metavize/conf/dirbackup.ldif
}

dump_installed()
{
    instlist=$1

    mkg installed > $instlist
}

dump_db()
{
    outfile=$1
    (pg_dump -U postgres -n settings mvvm; pg_dump -U postgres -n events -s mvvm) \
        | gzip > $outfile 2>/dev/null
}

backup()
{
    outdir=$1

    datestamp=$(date '+%Y%m%d%H%M')
    dumpfile=$outdir/mvvmdb-$datestamp.gz
    tarfile=$outdir/files-$datestamp.tar.gz
    instlist=$outdir/installed-$datestamp

    dump_db $dumpfile && tar_files $tarfile && dump_installed $instlist
}

if [ $# -lt 1 ] ; then 
    echo "Usage: $0 dumpdir"
fi


backup $1
