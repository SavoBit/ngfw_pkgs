#!/bin/sh

case "$1" in
    start)
        if [ ! -z "`cat /proc/cmdline | grep edgeguard-restore`" ] ; then
          echo "Starting Edgeguard Restore."
          /usr/bin/edgeguard-restore reboot
        fi
        ;;

    *)
        echo "Usage: /etc/init.d/untangle-restore-tools {start}"
        exit
        ;;
esac

exit 0