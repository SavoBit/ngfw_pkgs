# Add this to your ~/.muttrc to integrate untangle-spamassassin and mutt
# untangle-spamassassin report and classify as spam
macro index S "|/usr/bin/untangle-spamassassin -r"
# untangle-spamassassin classify as ham
macro index H "|/usr/bin/sa-learn --ham  --no-sync"
# rebuild the untangle-spamassassin bayes filter db
macro index R "!/usr/bin/sa-learn --sync"
