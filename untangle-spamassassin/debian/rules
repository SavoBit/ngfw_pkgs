#!/usr/bin/make -f

# SpamAssassin debian/rules
# Duncan Findlay

# Uses debhelper and dpatch

# Based on sample debian/rules by Joey Hess
# And patches from various people (see changelog)

#export DH_VERBOSE=1

# The architecture-dependent portion of this package can be built separately
# (i.e. without building the rest).

# Bad things could probably happen if we run this in parallel
.NOTPARALLEL:

CFLAGS=-O2 -Wall

ifneq (,$(findstring debug,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -g
endif
ifeq (,$(findstring nostrip,$(DEB_BUILD_OPTIONS)))
	INSTALL_PROGRAM += -s
endif

# For building both spamc and untangle-spamassassin
patch: patch-stamp
patch-stamp:
	dpatch apply-all

unpatch:
	dpatch deapply-all
	rm -rf patch-stamp debian/patched

configure: configure-stamp
configure-stamp: patch

	dh_testdir

	perl Makefile.PL INSTALLDIRS=vendor \
	 DESTDIR=$(CURDIR)/debian/untangle-spamassassin \
	 CONFDIR=/etc/untangle-spamassassin \
	 ENABLE_SSL=yes < /dev/null

	touch configure-stamp

build: build-indep build-arch

install: install-indep install-arch

binary: binary-indep

clean: clean1 unpatch
clean1:
	dh_testdir
	dh_testroot
	rm -f build-indep-stamp build-arch-stamp configure-stamp

	-$(MAKE) veryclean

	rm -f spamd/spamc.1p
	rm -Rf t/log/*
	rm -f debian/semantic.cache

	dh_clean

#debian/po/templates.pot: debian/untangle-spamassassin.templates
#	-debconf-updatepo

# Spamassassin (and untangle-spamassassin-tools) ONLY

build-indep: build-indep-stamp
#build-indep-stamp: configure debian/po/templates.pot
build-indep-stamp: configure

	dh_testdir

	$(MAKE) CFOPTIMIZE="$(CFLAGS)" CFCCFLAGS="" CFLIBS="" CFLDFLAGS=""

	touch build-arch-stamp

	touch build-indep-stamp


#install-indep: install-untangle-spamassassin install-untangle-spamassassin-tools
install-indep: install-untangle-spamassassin

# SpamAssassin

install-untangle-spamassassin: build-indep
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs -i

	$(MAKE) install


#	Get rid of SPAMC stuff.
	rm debian/untangle-spamassassin/usr/bin/spamc debian/untangle-spamassassin/usr/share/man/man1/spamc.1p


#	Move spamd to /usr/sbin + fix the man file
	sed 's#SPAMD 1#SPAMD 8#' \
	 debian/untangle-spamassassin/usr/share/man/man1/spamd.1p \
	 > debian/untangle-spamassassin/usr/share/man/man8/spamd.8p
	rm debian/untangle-spamassassin/usr/share/man/man1/spamd.1p

	mv debian/untangle-spamassassin/usr/bin/spamd debian/untangle-spamassassin/usr/sbin/

#	Install Debian specific files
	cp debian/65_debian.cf debian/untangle-spamassassin/usr/share/untangle-spamassassin/65_debian.cf

	-rmdir -p debian/untangle-spamassassin/usr/lib/perl5

#	dh_installdocs isn't flexible enough to install all the docs to the right place
#	Do it here!
	cp debian/copyright 				debian/untangle-spamassassin/usr/share/doc/untangle-spamassassin/
	cp debian/untangle-spamassassin.README.Debian		debian/untangle-spamassassin/usr/share/doc/untangle-spamassassin/README.Debian
	cp BUGS CREDITS README TRADEMARK UPGRADE USAGE NOTICE 	debian/untangle-spamassassin/usr/share/doc/untangle-spamassassin/
	cp ldap/README 					debian/untangle-spamassassin/usr/share/doc/untangle-spamassassin/README.ldap
	cp rules/STATISTICS*.txt 			debian/untangle-spamassassin/usr/share/doc/untangle-spamassassin/rules/
	cp spamd/README 				debian/untangle-spamassassin/usr/share/doc/untangle-spamassassin/README.spamd
	cp spamd/README.vpopmail 			debian/untangle-spamassassin/usr/share/doc/untangle-spamassassin/README.spamd-vpopmail
	cp -r sql/ 					debian/untangle-spamassassin/usr/share/doc/untangle-spamassassin/

#	Clean up any .svn stuff creeping in (only applicable for building
#	from svn)
	-find debian/untangle-spamassassin/ -path '*/.svn' -print0 | xargs -0 rm -Rf

binary-indep: build-indep install-indep
	dh_testdir -i
	dh_testroot -i
#	dh_installdebconf -i
	dh_installlogcheck -i
	dh_installdocs -i
	dh_installexamples -i
	dh_installinit --name=spamassassin -i -- defaults 19 21
	dh_installchangelogs Changes -i
	dh_link -i
	dh_compress -i
	dh_fixperms -i
	dh_installdeb -i
	dh_perl -i
	if [[ -f debian/version ]] ; then dh_gencontrol -- -v"`cat debian/version`" ; else dh_gencontrol ; fi
	dh_md5sums -i
	dh_builddeb -i

# spamc ONLY

build-arch: build-arch-stamp
#build-arch-stamp: configure debian/po/templates.pot
build-arch-stamp: configure

	dh_testdir

	-mkdir -p blib/man1

	$(MAKE) CFOPTIMIZE="$(CFLAGS)" CFCCFLAGS="" CFLIBS="" CFLDFLAGS="" spamc/spamc

	pod2man spamc/spamc.pod blib/man1/spamc.1p

	touch build-arch-stamp

install-arch: DH_OPTIONS=
install-arch: build-arch
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs -a

	cp spamc/spamc debian/spamc/usr/bin/spamc

binary-arch: build-arch install-arch
	dh_testdir -a
	dh_testroot -a
	dh_installlogcheck -a
	dh_installdocs -a
	dh_installman -a
	dh_installchangelogs Changes -a
	dh_strip -a
	dh_compress -a
	dh_fixperms -a
	dh_installdeb -a
	dh_shlibdeps -a
	if [[ -f debian/version ]] ; then dh_gencontrol -- -v"`cat debian/version`" ; else dh_gencontrol ; fi
	dh_md5sums -a
	dh_builddeb -a

.PHONY: build build-indep build-arch clean clean1 binary-indep binary-arch binary install configure install-indep install-indep-docs install-arch unpatch
