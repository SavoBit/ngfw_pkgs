###########################################################################
# startup; now done in .zlogin
###########################################################################
#screen 0 zsh
#screen 1 mutt
#screen 2 slrn
#screen 3 centericq
#screen 4 irssi
#screen 5 ssh ob1
#screen 6 zsh

###########################################################################
# Bindings (from /etc/screenrc)
###########################################################################
bind ^k
#bind L
bind ^\
# Make them better
bind	\\	quit
bind 	I 	login on
bind 	O 	login off
bind 	} 	history
bind 	= 	resize =
bind 	+ 	resize +1
bind 	- 	resize -1
bind 	_ 	silence
bind 	j 	focus down
bind 	k 	focus up
bind 	K 	kill

###########################################################################
# termcap info
###########################################################################
termcapinfo 	vt100 dl=5\E[M
# title bar
termcapinfo 	xterm*|rxvt*|kterm*|Eterm* hs:ts=\E]0;:fs=\007:ds=\E]0;\007
# optimal terminals
termcapinfo	xterm*|linux*|rxvt*|Eterm* OP
# those terminals use screen scrollback buffer
termcapinfo 	xterm|xterms|xs|rxvt|Eterm ti@:te@

#term 		Eterm
termcapinfo 	xterm 'is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l'
#termcapinfo 	Eterm 'is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l'

