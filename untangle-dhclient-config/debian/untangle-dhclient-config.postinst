#! /bin/bash

cat > /etc/dhcp3/dhclient.conf <<EOF
# AUTOGENERATED BY UNTANGLE DO NOT MODIFY MANUALLY

timeout 40;
retry 15;

send host-name "`hostname -s`";

EOF

## Update the network interfaces to use dhclient instead.
sed -i -e 's/up\(.*\)pump *-i *\([^ ]*\).*/up\1 dhclient \2 || true/' /etc/network/interfaces

## Remove the previous /etc/dhcp3/exit hooks
rm -f /etc/dhcp3/dhclient-exit-hooks.d/ut-pump.sh

