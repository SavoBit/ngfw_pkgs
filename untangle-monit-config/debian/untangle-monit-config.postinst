#! /bin/bash

INITTAB=/etc/inittab

if ! grep -q monit $INITTAB ; then
  echo "mo:2345:respawn:/usr/share/untangle/bin/monit-wrapper.sh" >> $INITTAB
  [ -p /dev/initctl ] && telinit q
fi

# in case we changed the wrapper
pkill 'bin/sh /usr/share/untangle/bin/monit-wrapper.sh'

touch /etc/untangle/monit-to-restart

exit 0