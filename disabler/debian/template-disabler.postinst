#!/bin/sh

if [ -f /usr/share/metavize/conf/trials/template-used ] ; then

    # trial already used - disable immediately
    mcli disable template-transform &> /dev/null &

else

    # change extraname to trial
    mcli extraname template-transform "trial" &> /dev/null &

    # schedule disabling
    echo "mcli disable template-transform" | at "+30 days" &> /dev/null
fi


exit 0
