#!/bin/sh

if [ -f /usr/share/metavize/conf/trials/ids-used ] ; then

    # trial already used - disable immediately
    mcli disable ids-transform &> /dev/null &

else

    # change extraname to trial
    mcli extraname ids-transform "trial" &> /dev/null &

    # schedule disabling
    echo "mcli disable ids-transform" | at "+30 days" &> /dev/null
fi


exit 0
