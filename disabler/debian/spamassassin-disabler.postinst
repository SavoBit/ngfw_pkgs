#!/bin/sh

if [ -f /usr/share/metavize/conf/trials/spamassassin.expired ] ; then

    # trial already used - disable immediately
    mcli disable spamassassin-transform &> /dev/null &

else

    # change extraname to trial
    mcli extraname spamassassin-transform "trial" &> /dev/null &

    # schedule disabling - this gets double checked by the cron job
    echo "/usr/bin/mvdisable spamassassin-transform &> /dev/null" | at "+30 days" &> /dev/null
    mkdir -p /usr/share/metavize/conf/trials &> /dev/null
fi


exit 0
