#!/bin/sh

if [ -f /usr/share/metavize/conf/trials/httpblocker-used ] ; then

    # trial already used - disable immediately
    mcli disable httpblocker-transform &> /dev/null &

else

    # change extraname to trial
    mcli extraname httpblocker-transform "trial" &> /dev/null &

    # schedule disabling
    echo "mcli disable httpblocker-transform" | at "+30 days" &> /dev/null
fi


exit 0
