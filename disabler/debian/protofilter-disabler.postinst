#!/bin/sh

if [ -f /usr/share/metavize/conf/trials/protofilter-used ] ; then

    # trial already used - disable immediately
    mcli disable protofilter-transform &> /dev/null &

else

    # change extraname to trial
    mcli extraname protofilter-transform "trial" &> /dev/null &

    # schedule disabling
    echo "mcli disable protofilter-transform" | at "+30 days" &> /dev/null
fi


