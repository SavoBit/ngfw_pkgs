#!/bin/sh

if [ -f /usr/share/metavize/conf/trials/spyware-used ] ; then

    # trial already used - disable immediately
    mcli disable spyware-transform &> /dev/null &

else

    # change extraname to trial
    mcli extraname spyware-transform "trial" &> /dev/null &

    # schedule disabling
    echo "mcli disable spyware-transform" | at "+30 days" &> /dev/null
fi


exit 0
