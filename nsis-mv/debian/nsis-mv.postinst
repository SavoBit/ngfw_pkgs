#!/bin/sh

LIST=/usr/share/nsis-mv/copied-files
DIR="`pwd`"

cd /usr/share/nsis-mv/
for i in `find . -type f` ; do 
    if [ ! -f /usr/share/nsis/$i ] ; then
        echo $i >> $LIST
        mkdir -p `dirname /usr/share/nsis/$i`
        cp -r $i /usr/share/nsis/$i
    fi
done

# Copy in the NSISKill DLL
cp /usr/share/nsis-mv/Plugins/processwork.dll /usr/share/nsis/Plugins/

cd ${DIR}
unset DIR