<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <% main_menu = menu_organizer.get_node( "/main" ) %>
  <head>
    <title><%= (( @title.nil? ) ? ApplicationController::DefaultTitle : @title ).t %></title>
    <% @stylesheets.each do |sheet| %>
      <%= stylesheet_link_tag sheet %>
    <% end %>

     <!--[if lte IE 6]>
       <%= stylesheet_link_tag "ie.css" %>
     <![endif]-->
     <!--[if lt IE 7]>
       <%= javascript_include_tag "IE7.js" %>
     <![endif]-->

    <%= javascript_include_tag :defaults %>
    <% @scripts.each do |script| %>
      <%= javascript_include_tag script %>
    <% end %>
  </head>
  <body>
	<div id="guide"></div>
    <div id="overlay"  style="display: none">
      <div id="rule-dialog">
      </div>
    </div>
    <div id="main-menu" onresize="menuResize();">
      <%= render( :partial => main_menu.partial, 
      :locals => { :menu => main_menu, :css_class => "main-menu", :depth => 0, :max_depth => 2 } ) %>
    </div>
    <div id="main-content">
      <%= yield %>
    </div>
  </body>
</html>
