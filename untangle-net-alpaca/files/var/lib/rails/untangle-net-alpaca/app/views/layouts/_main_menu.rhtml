<%
special_tabs = [ "Advanced", "Logout" ]
advanced = nil
logout = nil
%>
<ul id="tabs">
<% for menu_item in menu.children %>
   <% if ( special_tabs.index( menu_item.name ).nil? ) %>
     <li><div><a href="<%= menu_item.action %>"><%= menu_item.name.t %></a></div></li>
   <% elsif ( menu_item.name == "Advanced" ) 
      	    advanced = menu_item %>
   <% elsif ( menu_item.name == "Logout" ) 
      	    logout = menu_item %>
   <% end %>
<% end %>
</ul>
<% if ! advanced.nil? %>
   <div id="advanced"><span><a href="<%= advanced.action %>"><%if ( advanced.children? ) %><%= image_tag( "rack/button-menu.png"  ) %>&nbsp;&nbsp;<% end %><%= advanced.name.t %></a></span>
   <% if ( advanced.children? ) %>
    <ul id="advanced-dropdown">
     <% for menu_item in advanced.children %>
     <li><a href="<%= menu_item.action %>"><%= menu_item.name.t %></a></li>
     <% end %>
    </ul>
   <% end %>
   </div>
<% end %>
<% if ! logout.nil? and session[:username] != "nonce-authenticated" %>
   <div id="logout"><span><a href="<%= logout.action %>"><%= logout.name.t %></a></span></div>
<% end %>