#! /bin/bash

case "$1" in
    start)
        if [ ! -z "`cat /proc/cmdline | grep ut-restore`" ] ; then
          echo "Starting Edgeguard Restore."
          /usr/share/untangle/bin/ut-restore reboot
        fi
        ;;

    *)
        echo "Usage: /etc/init.d/untangle-restore-tools {start}"
        exit
        ;;
esac

exit 0
