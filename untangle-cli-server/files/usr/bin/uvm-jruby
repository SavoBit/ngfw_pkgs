#!/bin/bash

UVM_ROOT=${UVM_ROOT:-}

CLASSPATH="${UVM_ROOT}/usr/share/untangle/lib/untangle-libuvm-api:${UVM_ROOT}/usr/share/java/uvm/hibernate3.jar:${UVM_ROOT}/usr/share/java/uvm/log4j-1.2.14.jar"
for j in ${UVM_ROOT}/usr/share/java/reports/*jar ; do
    CLASSPATH="$CLASSPATH:$j"
done

for j in ${UVM_ROOT}/usr/share/untangle/web/webstart/untangle-node*gui.jar; do 
	CLASSPATH="$CLASSPATH:$j"
done
CLASSPATH="$CLASSPATH:${UVM_ROOT}/usr/share/untangle/web/webstart/untangle-base-spam-gui.jar"

for j in ${UVM_ROOT}/usr/share/untangle/web/webstart/untangle-casing*gui.jar; do 
	CLASSPATH="$CLASSPATH:$j"
done

export CLASSPATH
export JRUBY_HOME=/usr/lib/jruby1.0

/usr/bin/jruby1.0 $*
