#!/bin/bash
. debian/scripts/vars
. debian/scripts/lib
mkdir -p $STAMP_DIR/patches $SOURCE_DIR/$TAR_DIR
for f in `find debian/patches -type f -maxdepth 1|sort`;do
	bf=$(basename $f)
	stampfile=$STAMP_DIR/patches/$bf
	if [ ! -e $stampfile ];then
		[ -r debian/patches/.$bf ] && sh debian/patches/.$bf && continue
		START $bf
		if file2cat $f | (cd $SOURCE_DIR/$TAR_DIR;patch -F 2 -p1) > $stampfile.log;then
			OK
			touch $stampfile
		else
			FAILED
			exit 1
		fi
	else
		ALREADY_DONE $bf
	fi
done
