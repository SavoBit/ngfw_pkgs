#!/bin/bash
. debian/scripts/vars
. debian/scripts/lib
mkdir -p $STAMP_DIR/patches $SOURCE_DIR/$TAR_DIR
for f in `find debian/patches -type f -maxdepth 1|sort -r`;do
	stampfile=$STAMP_DIR/patches/`basename $f`
	if [ -e $stampfile ];then
		START $f
		if file2cat $f | (cd $SOURCE_DIR/$TAR_DIR;patch -F 2 -p1 -R) > $stampfile.log;then
			OK
			rm $stampfile
		else
			FAILED
			exit 1
		fi
	else
		ALREADY_DONE $f
	fi
done
