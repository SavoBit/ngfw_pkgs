NameVirtualHost *:80
NameVirtualHost *:443
NameVirtualHost *:64157

<VirtualHost *:80>
    DocumentRoot /var/www/

    Include /etc/apache2/untangle-unrestricted-apps
    Include /etc/apache2/untangle-homepage

    ErrorLog /var/log/apache2/error.log
    CustomLog /var/log/apache2/access.log combined
</VirtualHost>

Alias /login /usr/share/untangle/mod_python/login

<Directory /usr/share/untangle/mod_python/login>
    AddHandler python-program .py
    PythonHandler login
</Directory>

<Location /webui>
    AuthType Basic
    AuthName "Administrator"
    require valid-user

    PythonOption Realm Administrator
    PythonAuthenHandler uvmlogin
    PythonHeaderParserHandler uvmlogin
</Location>

<VirtualHost *:443>
    DocumentRoot /var/www/

    Include /etc/apache2/untangle-unrestricted-apps
    Include /etc/apache2/untangle-homepage

    ErrorLog /var/log/apache2/error-ssl.log
    CustomLog /var/log/apache2/access-ssl.log combined

    SSLEngine on
    SSLCertificateFile /etc/apache2/ssl/apache.pem
</VirtualHost>

<VirtualHost *:64157>
    DocumentRoot /var/www/

    Include /etc/apache2/untangle-unrestricted-apps
    Include /etc/apache2/untangle-homepage

    ErrorLog /var/log/apache2/error-ssl.log
    CustomLog /var/log/apache2/access-ssl.log combined

    SSLEngine on
    SSLCertificateFile /etc/apache2/ssl/apache.pem
</VirtualHost>
